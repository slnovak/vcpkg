vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO slnovak/tree-sitter
    REF dceac83dcd935f0f1e8166cfe07ee4c6d70bda17
    SHA512 02add0dc70faf76578f5ecf6edf1cd9c1ad38a129c0d4cc6e918578722dbe39f59893ede344122ea50758124f2d34c592c7980d1f67d82370a6f432c1a343fbb
